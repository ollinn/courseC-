<Window x:Class="SquareRoots.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SquareRoots"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="28" Margin="12,12,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="398" TextChanged="inputTextBox_TextChanged"/>
        <Button x:Name="calculateButton" Content="Calculate" HorizontalAlignment="Right" Height="23" Margin="0,17,277,0" VerticalAlignment="Top" Width="75" Click="calculateButton_Click"/>
        <Label x:Name="frameworklLabel" Content="0.00 (Using .NET Framework)" HorizontalAlignment="Left" Height="28" Margin="12,62,0,0" VerticalAlignment="Top" Width="479"/>
        <Label x:Name="newtonLabel" Content="0.00 (Using Newton)" HorizontalAlignment="Left" Height="28" Margin="12,95,0,0" VerticalAlignment="Top" Width="479"/>

    </Grid>
</Window>
